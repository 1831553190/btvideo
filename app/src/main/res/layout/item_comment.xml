<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_phone_android_24"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/item_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="用户名"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/item_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="时间"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_comment_username"
        app:layout_constraintStart_toEndOf="@+id/item_comment_username"
        app:layout_constraintTop_toTopOf="@+id/item_comment_username" />

    <TextView
        android:id="@+id/item_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="评论内内容啊索尼sadasfjahyvtboiuybtvaiuyeiutvsjdvfiashfjkvhsdkjgbfasgkjhfghasjgkjg克酒店回来凯撒辉煌科技嘎看见时候看见啊记号就撒不会基本课设好好干吧看"
        app:layout_constraintStart_toStartOf="@+id/item_comment_username"
        app:layout_constraintTop_toBottomOf="@+id/item_comment_username" />
</androidx.constraintlayout.widget.ConstraintLayout>