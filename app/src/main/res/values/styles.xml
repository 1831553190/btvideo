<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>



    <!--登陆按钮主题-->
    <style name="SharpButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/SharpComponent</item>
    </style>
    <!--登陆按钮主题-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/SmallComponent</item>
    </style>

    <style name="BorderButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/SmallComponent</item>
    </style>

    <style name="SmallComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>
    <style name="SharpComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

</resources>